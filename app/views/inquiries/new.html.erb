  <div class="contact">
   <% if flash[:email] %>
     <p id="notice">
       <%= flash[:email] %>
     </p>
   <% end %>
    <h2 style="margin-bottom: 30px;">お問い合わせ</h2>
    <div class="contact-form">
      <%= form_with model: @inquiry, local:true do |f| %>
        <%= render 'layouts/error', model: f.object %>
      <h3>お名前</h3>
      <%= f.text_field :name, required: true %>
      <h3>メールアドレス</h3>
      <%= f.email_field :email, required: true %>
      <h3>お問い合わせ内容</h3>
      <%= f.text_area :message, :size=>"40x5", required: true %>
      <div>
        <p><%= f.submit "送信", class: "button is-info", style: "margin-top: 30px; margin-left: 80%;"  %></p>
      </div>
      <% end %>
    </div>
  </div>