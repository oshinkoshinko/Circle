<section class="events-index">
  <div class="event-lists">
    <h4>イベント一覧</h4>
    <div class="new-event-btn">
      <%= button_to "イベントを作る", new_event_path, method: :get %>
    </div>
    <div class="event-genre">
      <h4>ジャンル別イベント</h4>
      <% @genres.each do |genre| %>
        <%= genre.name %><br>
        <% genre.events.each do |event| %>
          <% unless event.is_finished == true %>
            <%= link_to event_path(event), local:true do %>
              <%= attachment_image_tag event, :event_image, :fill, 50, 25, format: "jpeg", fallback: "event_image.jpg", size:'50x25' %>
              <%= event.name %><br>
            <% end %>
            開催日時:<%= event.started_at.strftime("%Y年%-m月%-d日 %H時%M分") %><br><hr>
          <% end %>
         <% end %>
      <% end %>
    </div>
    <div class="new-events-list">
      <h4>新着イベント</h4>
      <div class="new-event-list">
        <% @new_events.each do |new_event| %>
          <%= link_to event_path(new_event), local:true do %>
            <%= attachment_image_tag new_event, :event_image, :fill, 50, 25, format: "jpeg", fallback: "event_image.jpg", size:'50x25' %>
            <%= new_event.name %><br>
          <% end %>
          開催日時:<%= new_event.started_at.strftime("%Y年%-m月%-d日 %H時%M分") %><br><hr>
        <% end %>
      </div>
    </div>
    <div class="finished-events-list">
      <h4>開催終了イベント</h4>
      <div class="finished-event-list">
        <% @finished_events.each do |finished_event| %>
          <%= link_to event_path(finished_event), local:true do %>
            <%= attachment_image_tag finished_event, :event_image, :fill, 50, 25, format: "jpeg", fallback: "event_image.jpg", size:'50x25' %>
            <%= finished_event.name %><br>
          <% end %>
          終了日:<%= finished_event.finished_at.strftime("%Y年%-m月%-d日") %><br><hr>
        <% end %>
      </div>
    </div>
  </div>
</section>