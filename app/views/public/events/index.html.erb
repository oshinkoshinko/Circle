<section class="events-index">
  <div class="genre-search-form">
    <%= search_form_for @q do |f| %>
      <%= f.collection_select :genre_id_eq, @genres, :id, :name, :include_blank => 'ジャンル検索' %>
      <%= f.submit %>
    <% end %>
  </div>

  <div class="address-search-form">
    <%= search_form_for @q do |f| %>
    <%= f.search_field :place_cont, placeholder: "場所で検索" %>
    <%= f.submit %>
    <% end %>
  </div>
  <div class="new-event-btn">
    <%= button_to "イベントを作る", new_event_path, method: :get %>
  </div>
  <h4>開催イベント</h4>
  <div id="new-card">
    <% @new_events.each do |new_event| %>
      <% if new_event.expired_at > DateTime.now %>
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= link_to event_path(new_event), local:true do %>
                <%= attachment_image_tag new_event, :event_image, :fill, 50, 25, format: "jpeg", fallback: "event_image.jpg", size:'50x25' %>
              <% end %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-left">
                <figure class="image is-48x48 is-square">
                  <%= link_to member_path(new_event.member.id), local:true do %>
                    <%= attachment_image_tag new_event.member, :profile_image, :fill, 50, 50, format: "jpeg", fallback: "no_image.jpg", size:'50x50', class: "is-rounded" %>
                  <% end %>
                </figure>
              </div>
              <div class="media-content">
                <p class="is-6 is-size-7">
                  <%= new_event.member.account_name %>
                </p>
              </div>
            </div>
            <div class="content is-size-7">
              <%= new_event.content %>
              <time><%= new_event.started_at.strftime("%Y年%-m月%-d日 %H時%M分") %> 開催</time>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <h4>開催終了イベント</h4>
  <div id="finished-card">
    <% @finished_events.each do |finished_event| %>
      <% if finished_event.finished_at < DateTime.now %>
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= link_to event_path(finished_event), local:true do %>
                <%= attachment_image_tag finished_event, :event_image, :fill, 50, 25, format: "jpeg", fallback: "event_image.jpg", size:'50x25' %>
              <% end %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-left">
                <figure class="image is-48x48 is-square">
                  <%= link_to member_path(finished_event.member.id), local:true do %>
                    <%= attachment_image_tag finished_event.member, :profile_image, :fill, 50, 50, format: "jpeg", fallback: "no_image.jpg", size:'50x50', class: "is-rounded" %>
                  <% end %>
                </figure>
              </div>
              <div class="media-content">
                <p class="is-6 is-size-7">
                  <%= finished_event.member.account_name %>
                </p>
              </div>
            </div>
            <div class="content is-size-7">
              <%= finished_event.content %>
              <time><%= finished_event.finished_at.strftime("%Y年%-m月%-d日 %H時%M分") %> 終了</time>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</section>