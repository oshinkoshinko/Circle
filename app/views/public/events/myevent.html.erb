<section class="my-event">
  <h4>マイイベント</h4>
  <%= link_to "イベントを開催する", new_event_path, local:true %>
  <div class="join-event">
    <h4>参加予定イベント</h4>
    <% @join_events.each do |join_event| %>
      <%= link_to event_path(join_event.event), local:true do %>
      <%= attachment_image_tag join_event.event, :event_image, :fill, 50, 25, format: "jpeg", fallback: "event_image.jpg", size:'50x25' %>
      <%= join_event.event.name %><br>
      <% end %>
      <p>
        開催日時：<%= join_event.event.started_at.strftime("%Y年%-m月%-d日 %H時%M分") %><br>
      </p>
    <% end %>
  </div>
  <div class="host-event">
    <h4>開催予定イベント</h4>
    <% @active_events.each do |event| %>
      <%= link_to event_path(event), local:true do %>
      <%= attachment_image_tag event, :event_image, :fill, 50, 25, format: "jpeg", fallback: "event_image.jpg", size:'50x25' %>
      <%= event.name %>
      <% end %>
      <%= link_to edit_event_path(event.id) do %>
        <i class="fas fa-wrench"></i>
      <% end %>
      <p>
        開催日時：<%= event.started_at.strftime("%Y年%-m月%-d日 %H時%M分") %><br>
      </p>
    <% end %>
  </div>
  <div class="finished-event">
    <h4>開催済みイベント</h4>
    <% @finished_events.each do |event| %>
      <%= link_to event_path(event), local:true do %>
      <%= attachment_image_tag event, :event_image, :fill, 50, 25, format: "jpeg", fallback: "event_image.jpg", size:'50x25' %>
      <%= event.name %><br>
      <% end %>
    <% end %>
  </div>
</section>