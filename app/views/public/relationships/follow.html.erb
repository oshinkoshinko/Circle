<div class="following-list">
  <h4>フォロー中</h4>
    <div class="following-member">
      <% if @members.exists? %>
        <% @members.each do |member| %>
          <article class="box media" style="margin: 0px -12px 0px; border-radius: 0px;">
            <figure class="media-left is-square is-48-48">
              <%= link_to member_path(member) do %>
                <%= attachment_image_tag member, :profile_image, :fill, 100, 100, fallback: "no-prof-image.png", size: "30x30", style: "border-radius: 50%;" %>
              <% end %>
            </figure>
            <div class="media-content">
              <strong><%= member.account_name %></strong>
              <small><%= member.introduction %></small>
            </div>
          </article>
        <% end %>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
  </div>
</div>