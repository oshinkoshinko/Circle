<div class="follower-list">
  <h4>followers</h4>
  <% if @members.exists? %>
    <% @members.each do |member| %>
      <div>
      <%= link_to member_path(member) do %>
      <%= attachment_image_tag member, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size: "30x30" %>
      <% end %>
      <%= member.name %>
      <%= member.introduction %>
      </div><hr><br>
    <% end %>
  <% else %>
    <p>ユーザーがいません</p>
  <% end %>
</div>
