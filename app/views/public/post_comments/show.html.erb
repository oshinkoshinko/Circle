<!--post内容-->
<div class="post-content">
  <%= link_to member_path(@post.member.id) do %>
    <%= attachment_image_tag @post.member, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg" %>
  <% end %>
  <%= @post.body %>
  /ジャンル：<%= @post.genre.name %>
  <%= time_ago_in_words(@post.created_at) %>前
  <hr>
</div>

<!--comment一覧-->
<div id="comment-lists">
  <%= render 'public/post_comments/comments', post_comments: @post_comments %>
</div>

<!--comment投稿フォーム-->
<div id="comment-form">
  <%= form_with model: @post_comment do |f| %>
    <%= f.text_area :comment, placeholder: "コメントを書きましょう" %>
    <!--post_idをpost_commentに渡す-->
    <%= f.hidden_field :post_id, :value => @post.id %>
    <%= f.submit "コメント" %>
  <% end %>
</div>
