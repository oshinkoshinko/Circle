<div class="profile-edit">
  <div class="profile-edit-form">
    <h4>編集</h4>
    <%= form_with model: @member, local:true do |f| %>
    <%= render 'layouts/error', model: f.object %>
    <h6>アカウント名</h6>
    <%= f.text_field :account_name , required: true %><br>
    <h6>自己紹介</h6>
    <%= f.text_area :introduction, :size=>"40x4" %><br>
    <%= attachment_image_tag @member, :profile_image, :fill, 500, 500, format: "jpeg", fallback: "no-prof-image.png", style: "border-radius: 50%;" %><br>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br>
    <%= f.submit "更新する", class: "button is-info", style: "margin-top: 30px; margin-left: 73%;" %>
    <% end %>
  </div>
  <div class="unsubscribe-link">
    <%= link_to "退会はこちら", members_withdraw_path, class: "button is-light is-small" %>
  </div>
</div>