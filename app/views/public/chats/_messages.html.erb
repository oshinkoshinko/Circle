<!--メッセージ内容-->
<div class="chats">
  <% chats.each do |chat| %>
    <% if chat.member_id == current_member.id %>
      <div class="chat-sender">
        <div class="mycomment"><p><%= safe_join(chat.message.split("\n"),tag(:br)) %></p></div>
      </div>
    <% else %>
      <div class="chat-receiver">
        <div class="face-icon">
          <%= link_to member_path(chat.member.id) do %>
            <%= attachment_image_tag chat.member, :profile_image, :fill, 60, 60, fallback: "no-prof-image.png", size:"30x30", style: "border-radius: 50%;" %>
          <% end %>
        </div>
        <div class="chatting">
          <div class="says"><p><%= safe_join(chat.message.split("\n"),tag(:br)) %></p></div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>