<div class="signup">
  <div class="signup-form">
    <h4>アカウント登録</h4>
    <%= form_for(resource, as: resource_name, url: members_path) do |f| %>
    <%= render "members/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :名前 %><br />
      <%= f.text_field :name, autocomplete: "name", required: true %>
    </div>
    <div class="field">
      <%= f.label :アカウント名 %><br />
      <%= f.text_field :account_name, autocomplete: "account_name", required: true %>
    </div>
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autocomplete: "email", required: true %>
    </div>
    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      (<%= @minimum_password_length %> 文字以上)
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", required: true %>
    </div>
    <div class="field">
      <%= f.label :パスワード（確認用） %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
    </div>
    <div class="actions">
      <%= f.submit "登録する", class: "button is-info" %>
    </div>
    <% end %>
    <%= render "members/shared/links" %>
  </div>
</div>